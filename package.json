{
  "name": "remix-template-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup node",
    "build": "npm run build:css && npm run build:content && remix build",
    "build:content": "yarn tsm ./scripts/build-posts.ts",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "e2e": "yarn e2e:run",
    "e2e:open": "yarn e2e:run --headed",
    "e2e:run": "yarn playwright test e2e --config=playwright.config.ts",
    "e2e:run:chromium": "yarn playwright test e2e --config=playwright.config.ts --project=chromium"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": true
  },
  "dependencies": {
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "clsx": "^1.1.1",
    "front-matter": "^4.0.2",
    "prismjs": "^1.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2",
    "zod": "^3.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/fs-extra": "^9.0.13",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@vercel/node": "^1.15.3",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "fs-extra": "^10.1.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "remix": "^1.5.1",
    "rss-parser": "^3.12.0",
    "tailwindcss": "^3.0.24",
    "tsm": "^2.2.1",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
